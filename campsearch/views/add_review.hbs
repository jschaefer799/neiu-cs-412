<form method="post" action="/reviews/save" class="center">
    <div class="container-fluid">
        <input type="hidden" name="saveMethod" value="{{#if isCreate}}create{{else}}update{{/if}}"/>
        <div class="form-group row justify-content-center">
            <input type="hidden" name="reviewKey" value="{{ reviewKey}}"/>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-1 text-left font-weight-bold">
                <label class="col-form-label" for="title">Title: </label>
            </div>
            <div class="col-9">
                <input class="form-control" type="text" name="title"/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <textarea class="col-10 form-control" rows=5 name="body"></textarea><br/>
        </div>
        <div class="form-group row justify-content-center">
            <button type="submit" id="buttons" class="btn btn-primary btn-sm">Submit</button>
        </div>

        </div>
</form>
<img src="/assets/images/camping.jpg" class="img-fluid mt-4" alt="camping sunset">
