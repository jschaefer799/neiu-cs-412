<div class="container-fluid m-2">
    {{> user_messages}}
</div>

<div class="container shadow-sm p-3 mt-3 mb-5 bg-light rounded">

    <div class="container-fluid">
        <div class="row justify-content-center"><h2>Sign In</h2></div>
    </div>
        <hr>
        <form method="post" action="/users/login">
            <div class="container-fluid">
                <div class="form-group row justify-content-center mb-0">
                    <div class="col-1 col-md-3"></div>
                    <div class="col-9 col-md-5 text-left font-weight-bold">
                        <label class="col-form-label" for="email">Email: </label>
                    </div>

                    <div class="col-1 col-md-3"></div>
                    <div class="col-9 col-md-5">
                        <input class="form-control" id="email" type="email" name="email" required/><br/>
                    </div>
                </div>


                <div class="form-group row justify-content-center mb-0">
                    <div class="col-1 col-md-3"></div>
                    <div class="col-9 col-md-5 text-left font-weight-bold">
                        <label class="col-form-label" for="password">Password: </label>
                    </div>
                    <div class="col-1 col-md-3"></div>
                    <div class="col-9 col-md-5">
                        <input class="form-control" id="password" name="password" type="password" required/><br/>
                        Dont have an account? <a class="sign-in-links" href="/users/register">Create account</a>
                    </div>
                </div>

                <br/>

                <div class="form-group row justify-content-center">
                    <input id="buttons" class="btn btn-secondary mt-2" type="submit" value="Submit"/>
                </div>
            </div>
        </form>
</div>
