<title>{{title}}</title>
<div class="container-fluid m-2">
    {{> user_messages}}
</div>

<div id="home-page-card" class="card bg-dark text-white">
<img src="/assets/images/mountain.jpg" class="card-img" alt="camping sunset">

    <div id="front-img" class="card-img-overlay text-center ">
        <div id="box" class="shadow-lg rounded-sm">
        <h4 id="front-img-top-text" class="card-title">Spend more time where it matters.</h4>
        <h6 id="front-img-second-text" class="card-subtitle">(and less time looking for a campsite)</h6>


        <nav class="navbar justify-content-center">
        <form class="form-inline">
            <label class="sr-only" for="inlineFormInputGroupUsername2">Find a campsite</label>
