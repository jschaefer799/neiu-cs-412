                <input type="text" class="form-control" id="inlineFormInputGroupUsername2" placeholder="Find a campsite">
                <div id="search-icon" class="input-group-prepend">
                    <div id="search-icon-box" class="input-group-text align-content-center" type="submit">
                        <i id="search-icon" data-feather="search"></i>
                    </div>
                </div>
            </div>
        </form>
        </nav>
        </div>
    </div>
</div>

