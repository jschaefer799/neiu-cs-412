<div class="container-fluid m-2">
    {{> user_messages}}
</div>
<div class="container shadow-sm p-3 mt-3 mb-4 bg-light rounded">
    <form method="post" action="/users/save" class="center">
        <div class="container-fluid">

            <input type="hidden" name="checkCreate" value="{{#if doCreate}}create{{else}}update{{/if}}"/>
            <input type="hidden" name="id" value="{{userId}}"/>

            <div class="form-group row justify-content-center mt-4">
                <div class="col-2 text-left font-weight-bold">
                    <label class="col-form-label" for="firstName">First Name: </label>
                </div>
                <div class="col-4">
                    <input class="form-control" type="text" name="firstName" value="{{ userFirstName }}" required/><br/>
                </div>
            </div>
            <div class="form-group row justify-content-center mt-4">
                <div class="col-2 text-left font-weight-bold">
                    <label class="col-form-label" for="lastName">Last Name: </label>
                </div>
                <div class="col-4">
                    <input class="form-control" type="text" name="lastName" value="{{ userLastName }}"required/><br/>
                </div>
            </div>
            <div class="form-group row justify-content-center mt-4">
                <div class="col-2 text-left font-weight-bold">
                    <label class="col-form-label" for="email">Email: </label>
                </div>
                <div class="col-4">
                    <input class="form-control" type="text" name="email" value="{{ userEmail }}" required/><br/>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <button type="submit" id="buttons" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>

    <div class="row row-cols-8 justify-content-center">
        <a id="buttons" class="btn btn-primary m-2" data-toggle="modal" data-target="#exampleModal">Change Password</a>
        <div class="modal fade bd-example-modal-sm" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Change Password</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form method="post" action="/users/changePassword" class="center">
                        <div class="modal-body">

                                <div class="container-fluid">

                                    <input type="hidden" name="checkCreate" value="{{#if doCreate}}create{{else}}update{{/if}}"/>
                                    <input type="hidden" name="id" value="{{userId}}"/>


                                    <div class="form-group row justify-content-center mt-4">
                                        <div class="col-8 text-left font-weight-bold">
                                            <label class="col-form-label" for="oldpassword">Old Password: </label>
                                        </div>
                                        <div class="col-8">
                                            <input class="form-control" type="password" name="oldpassword" required/><br/>
                                        </div>
                                    </div>
                                    <div class="form-group row justify-content-center mt-4">
                                        <div class="col-8 text-left font-weight-bold">
                                            <label class="col-form-label" for="newpassword">New Password: </label>
                                        </div>
                                        <div class="col-8">
                                            <input class="form-control" type="password" name="newpassword" required/><br/>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    <div class="modal-footer">
                        <button type="button"  class="btn btn-secondary" data-dismiss="modal">Go Back</button>
                        <button type="submit"  class="btn btn-primary">Submit</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<img src="/assets/images/camping.jpg" class="img-fluid mt-4" alt="camping sunset">
