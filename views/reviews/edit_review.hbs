<div class="container-fluid m-2">
    {{> user_messages}}
</div>
<form method="post" action="/reviews/save" class="center">
    <div class="container-fluid">

        <input type="hidden" name="checkCreate" value="{{#if doCreate}}create{{else}}update{{/if}}"/>
        <input type="hidden" name="id" value="{{reviewId}}"/>
        <input type="hidden" name="date" value="{{reviewDate}}"/>

        <label id="ratingLabel">Rating: </label>
        <star-rating value="{{reviewRating}}" arial-labelledby="ratingLabel"></star-rating>
        <input type="hidden" id="starRating" name="rating"/>

        <div class="form-group row justify-content-center mt-4">
            <div class="col-1 text-left font-weight-bold">
                <label class="col-form-label" for="title">Title: </label>
            </div>
            <div class="col-9">
                <input class="form-control" type="text" name="title" value="{{ reviewTitle }}"required/><br/>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <textarea class="col-10 form-control" rows=5 name="body" required>{{ reviewBody }}</textarea><br/>
        </div>
        <div class="form-group row justify-content-center">
            <button type="submit" id="buttons" class="btn btn-primary btn-sm">Submit</button>
        </div>
    </div>
</form>
<img src="/assets/images/camping.jpg" class="img-fluid mt-4" alt="camping sunset">
